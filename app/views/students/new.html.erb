<div id="new-students-title">
  <div>
    <h1>Add Students to School</h1>
  </div>

  <div id="add-csv-link">
    <h4>
      <%= link_to("Add Multiple Students with CSV File", students_new_csv_path) %>
    </h4>
  </div>
</div>

<%# render partial: 'students/form', locals: {students: @students, student: @student} %>

<%# Everything below this point used to be part of the partial above  %>

<div class="student-list-container">
  <div class="paper-form">
    <h2>Student</h2>
    <%= form_for(:student, :html => {:class => 'new-student-form'}) do |f| %>
      <%# error_display(student) %>

      <%= f.text_field(:first_name, {maxlength: "20", class: "text-field", id: "text-field-first-name", placeholder: "First Name"}) %><br><br>
      <%= f.text_field(:last_name, {maxlength: "20", class: "text-field", id: "text-field-last-name", placeholder: "Last Name"}) %><br><br>
      <%= f.text_field(:grade, {maxlength: "4", class: "text-field", id: 'text-field-grade', placeholder: "Grade"}) %><br><br>
      <%= f.text_field(:klass, {maxlength: "5", class: "text-field", id: 'text-field-klass', placeholder: "Homeroom"}) %><br><br>

      <br>

      <div class="big-button">
        <%= f.submit() %>
      <% end %>

        <%# if !student.new_record? %>
          <%# form_tag(student_path(student), method: "delete") do %>
            <%# submit_tag("Delete Student", data: { confirm: 'Are you sure you want to delete this student?'}) %>
          <%# end %>
        <%# end %>
      </div>

  </div>

  <div class="students-in-school paper-form">
    <h3>Students in the school</h3>

    <%= form_tag(new_student_path, method: "get") do %>
      <%= text_field_tag('query', nil, placeholder: "Filter by name or class") %>
      <%= submit_tag("Filter", class: "little-button") %>
      <%= submit_tag('clear', class: "little-button") %>
    <% end %><br>

    <div class="listed-students">
      <table>
        <tr id="student-list-header">
          <th>Last Name</th>
          <th>First Name</th>
          <th>Grade</th>
          <th>HR</th>
          <th></th>
          <th></th>
        </tr>

      </table>
    </div>
  </div>
</div>
