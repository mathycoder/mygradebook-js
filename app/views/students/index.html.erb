<div>
  <h1>Add Students to Class <%= @klass.name %></h1>
  <div class="student-list-container">
    <div class="students-in-school paper-form">
      <h3>Students in the school</h3>

      <%= form_tag(klass_students_path(@klass), method: "get") do %>
        <%= text_field_tag('query', nil, placeholder: "Filter by name or class") %>
        <%= submit_tag("Filter", class: "little-button", id: "filter-students") %>
      <% end %><br>

      <div id="students-in-school" class="listed-students">
        <table>
          <tr>
            <th></th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Grade</th>
            <th>HR</th>
          </tr>
        </table>
      </div>
    </div>

    <div class="students-in-class paper-form">
      <h3>Students in this class</h3>
      <div id="students-in-klass" class="listed-students">
        <table>
          <tr>
            <th></th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Grade</th>
            <th>HR</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
